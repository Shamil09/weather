<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weather">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/weatherColor"
        tools:ignore="MissingConstraints,UselessLeaf"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/IDTCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/kislovodsk"
            android:textColor="@android:color/holo_green_light"
            android:textSize="50sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="@string/temperature"
            android:textColor="@color/yellow"
            android:textSize="60sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:layout_width="131dp"
            android:layout_height="123dp"
            android:layout_alignBottom="@+id/TWeather"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@mipmap/i1"
            android:contentDescription="TODO" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="272dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints,UselessLeaf">

        <TextView
            android:id="@+id/IDTCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="-1"
            android:textColor="@color/yellow"
            android:textSize="60sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds"
            tools:layout_editor_absoluteX="124sp"
            tools:layout_editor_absoluteY="224sp" />

        <Button
            android:id="@+id/IDButCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/count" />

        <Button
            android:id="@+id/IDButNewActiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="NewActiv" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>